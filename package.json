{
    "name": "pmac",
    "version": "0.1.8",
    "author": "Max Zakharzhevskiy",
    "description": "Password manager domain credential switch utility",
    "private": true,
    "license": "MIT",
    "main": "index.js",
    "keywords": [
        "utility",
        "javascript",
        "typescript"
    ],
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "dev": "tsc -w -p ./packages/utility/tsconfig.json",
        "build": "rm -rf dist && tsc",
        "makebin": "yarn build && pkg -t host -o pmac dist/index.js",
        "make-template": "gluehtml --nofav ./src/report-template/index.html",
        "pack-template": "node ./src/report-template/pack-template.js",
        "template": "yarn make-template && yarn pack-template"
    }
}