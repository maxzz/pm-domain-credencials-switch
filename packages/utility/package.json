{
    "name": "@pmac/utility",
    "version": "1.0.0",
    "author": "Max Zakharzhevskiy",
    "description": "Password manager domain credential switch utility",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "dev": "tsc -w",
        "build": "rm -rf dist && tsc",
        "copy": "xcopy pmac.exe \"./../..\" /Y",
        "makebin_old": "del pmac.exe && yarn build && pkg -t host -o pmac dist/index.js && yarn copy",
        "makebin": "del pmac.exe && yarn build && pkg -t host -o ../../pmac dist/index.js"
    },
    "dependencies": {
        "@pmac/shared-types": "1.0.0",
        "@pmac/template": "1.0.0",
        "fast-xml-parser": "^4.0.9",
        "minimist": "^1.2.5",
        "picocolors": "^1.0.0",
        "pm-manifest": "^1.0.4",
        "prompts": "^2.4.2",
        "rimraf": "^3.0.2"
    },
    "devDependencies": {
        "@types/minimist": "^1.2.2",
        "@types/node": "18.7.14",
        "@types/prompts": "^2.4.1",
        "@types/rimraf": "^3.0.0",
        "jszip": "^3.10.1"
    }
}
